                    <div class="classycloseIcon">
                        <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                    </div>
                    <!-- Nav Start -->
                    <div class="classynav">
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Shop">Shop</a>
                                <div class="megamenu">
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Sách Việt Nam</li>
                                        <li><a href ="/Home/ShopCategory/1">Sách kinh tế Việt Nam</a></li>
                                        <li><a href="/Home/ShopCategory/2">Sách khoa học xã hội Việt Nam</a></li>
                                        <li><a href="/Home/ShopCategory/3">Lịch sử Việt Nam</a></li>
                                        <li><a href="/Home/ShopCategory/4">Khoa học kỹ thuật Việt Nam</a></li>
