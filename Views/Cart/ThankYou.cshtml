
@{
    ViewData["Title"] = "ThankYou";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model OrderViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Thank You</title>
</head>
<body>
    <h1>Thank You for Your Order!</h1>

    <p>Customer Name: @Model.CustomerName</p>
    <p>Customer Address: @Model.CustomerAddress</p>
    <p>Customer Mobile: @Model.CustomerMobile</p>
    <p>Customer Message: @Model.CustomerMessage</p>
    <p>Payment Method: @Model.PaymentMethod</p>
    <p>Total Amount: @Model.TotalAmount</p>

    <p>We will contact you soon for shipment and payment.</p>
</body>
</html>