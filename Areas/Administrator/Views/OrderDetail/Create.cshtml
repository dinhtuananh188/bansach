@model Sach.Model.Models.OrderDetail
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" asp-controller="OrderDetail" method="post">

    <div class="row mb-3">
        <label asp-for="OrderId" class="col-sm-2 col-form-label">Order Id</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="OrderId">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ProductId" class="col-sm-2 col-form-label">Product Id</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ProductId">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Quantity" class="col-sm-2 col-form-label">Số lượng</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Quantity"></textarea>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" href="/Administrator/OrderDetail/Index">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>