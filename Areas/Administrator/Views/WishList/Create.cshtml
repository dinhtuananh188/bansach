
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

@model Sach.Model.Models.WishList


<form asp-action="Create" asp-controller="WishList" method="post" class="row g-3">
    <div class="col-md-2">
        <label asp-for="Id" class="form-label">ID</label>
        <input class="form-control" asp-for="Id">
    </div>
    <div class="col-6">
        <label asp-for="CustomerId" class="form-label">Mã khách hàng</label>
        <input class="form-control" asp-for="CustomerId">
    </div>
    <div class="col-md-6">
        <label asp-for="AddedDate" class="form-label">Ngày tạo đơn</label>
        <input type="datetime-local" class="form-control" asp-for="AddedDate">
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary" href="/Administrator/WishList/Index">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>