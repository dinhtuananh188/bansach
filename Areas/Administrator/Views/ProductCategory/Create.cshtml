@model Sach.Model.Models.ProductCategory
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>

<form asp-action="Create" asp-controller="ProductCategory" method="post">

    <div class="row mb-3">
        <label asp-for="Id" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Tên</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả</label>
        <div class="col-sm-10">
            <textarea name="editor1" class="form-control" asp-for="Description"></textarea>
            <script>
                CKEDITOR.replace('editor1');
            </script>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" href="/Administrator/ProductCategory/Index">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>
